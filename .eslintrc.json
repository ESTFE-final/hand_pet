{
	"env": {
		"browser": true,
		"es2021": true // ES6부터 ES2021까지의 모든 기능을 포함
	},
	"extends": ["eslint:recommended", "prettier"],
	"rules": {
		"no-var": "error", // var 사용 금지
		"prefer-const": "error", // const 사용을 선호, 값이 재할당되지 않는 경우 const를 사용하도록 강제
		"quotes": ["error", "single"], // single quote 강제
		"semi": ["error", "always"], // 세미콜론 강제
		"keyword-spacing": [
			"error",
			{
				// 키워드와 괄호 사이에 스페이스 강제
				"before": true,
				"after": true
			}
		]
	}
}
